{
    "manifest_version": 3,
    "name": "Manaba Plus",
    "version": "$version$",
    "description": "Add awesome modifications to manaba",
    "permissions": [
      "storage",
      "downloads"
    ],
    "icons": {
      "16": "img/icon-mp-16.png",
      "32": "img/icon-mp-32.png",
      "48": "img/icon-mp-48.png",
      "128": "img/icon-mp-128.png"
    },
    "content_scripts": [

      {
        "matches": [
          "$bad-status$"
        ],
        "js": [
          "modifiers/bad-status/index.js"
        ],
        "css": [
          "modifiers/bad-status/index.css"
        ]
      },
      {
        "matches": [
          "$manaba-url$*"
        ],
        "js": [
          "modifiers/common/index.js"
        ],
        "css": [
          "modifiers/common/index.css"
        ]
      },
      {
        "matches": [
          "$manaba-url$home*"
        ],
        "exclude_matches": [
          "$manaba-url$home_coursetable",
          "$manaba-url$home_selfregistration_*"
        ],
        "js": [
          "modifiers/home/index.js"
        ],
        "css": [
          "modifiers/home/index.css"
        ]
      },
      {
        "matches": [
          "$manaba-url$course*_grade"
        ],
        "js": [
          "modifiers/grade/index.js"
        ]
      },
      {
        "matches": [
          "$manaba-url$page_*"
        ],
        "js": [
          "modifiers/page/index.js"
        ]
      },
      {
        "matches": [
          "$manaba-url$course*_report_*"
        ],
        "js": [
          "modifiers/report/index.js"
        ],
        "css": [
          "modifiers/report/index.css"
        ]
      },
      {
        "matches": [
          "$manaba-url$syllabus_*"
        ],
        "js": [
          "modifiers/syllabus/index.js"
        ]
      }
    ],
    "web_accessible_resources": [

      {
        "resources": [
          "style.css"
        ],
        "matches": [
          "$manaba-url$"
        ]
      }
    ]
  }
