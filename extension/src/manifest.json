{
  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "manifest_version": 3,
  "default_locale": "en",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "src/pages/popup/index.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{firefox}}.scripts": [
      "src/background.ts"
    ]
  },
  "{{firefox}}.browser_specific_settings": {
    "gecko": {
      "id": "{77fcd6fa-22a1-498c-88a5-cee7bf16b989}"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "$bad-status$"
      ],
      "js": [
        "src/modifiers/bad-status/index.ts",
        "src/modifiers/bad-status/redirect-check.ts"
      ],
      "css": [
        "src/modifier.css",
        "src/modifier-component.css"
      ]
    },
    {
      "matches": [
        "$manaba-url$*"
      ],
      "js": [
        "src/modifiers/common/index.ts"
      ],
      "css": [
        "src/modifier.css",
        "src/modifier-component.css"
      ]
    },
    {
      "matches": [
        "$manaba-url$course*_grade"
      ],
      "js": [
        "src/modifiers/grade/index.ts"
      ]
    },
    {
      "matches": [
        "$manaba-url$home*"
      ],
      "exclude_matches": [
        "$manaba-url$home_campusnews_*",
        "$manaba-url$home_coursetable",
        "$manaba-url$home_library_query",
        "$manaba-url$home_preferences*",
        "$manaba-url$home_selfregistration_*",
        "$manaba-url$home_submitlog",
        "$manaba-url$home_usermemo"
      ],
      "js": [
        "src/modifiers/home/index.ts"
      ]
    },
    {
      "matches": [
        "$manaba-url$page_*"
      ],
      "js": [
        "src/modifiers/page/index.ts"
      ]
    },
    {
      "matches": [
        "$manaba-url$course*_report_*"
      ],
      "js": [
        "src/modifiers/report/index.ts"
      ]
    },
    {
      "matches": [
        "$manaba-url$syllabus_*"
      ],
      "js": [
        "src/modifiers/syllabus/index.ts"
      ]
    }
  ]
}
